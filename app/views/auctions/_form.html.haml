.container
  - if @auction.errors.any?
    %ul
      - @auction.errors.full_messages.each do |message|
        %li message


  = simple_form_for @auction, html: {class: "form-horizontal"} do |f|
    = f.input :title, label: "auction label"
    = f.input :body, label: "description"
    = f.input :reserve_price
    = f.input :end_date
    = f.submit "Save", class: "btn btn-primary"